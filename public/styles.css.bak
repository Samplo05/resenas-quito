/* === RESET BÁSICO === */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* === FUENTES Y CUERPO === */
body {
  font-family: 'Elsie', sans-serif;
  line-height: 1.6;
  background: linear-gradient(to right, #dfd6ec, #c4b6d7);
  color: #333;
  padding: 0 20px;
  min-height: 100vh;
}

body,
.resena,
form,
header,
footer {
  transition: background-color 0.3s, color 0.3s, border 0.3s;
}

/* === HEADER Y NAVEGACIÓN === */
header {
  background: linear-gradient(to right, #68389c, #da6778);
  color: white;
  padding: 20px 0;
  text-align: center;
  display: flex;
  align-items: center;
  gap: 15px;
  margin-bottom: 20px;
}

#logo {
  height: 60px;
  width: 60px;
  border-radius: 50%;
  margin-left: 20px;
  box-shadow: 0 0 5px rgba(0,0,0,0.2);
}

header h1 {
  margin-bottom: 5px;
}

@media (max-width: 600px) {
  header {
    flex-direction: column;
    text-align: center;
  }
}

/* === SECCIONES GENERALES === */
section {
  margin: 40px 0;
}

h2 {
  font-size: 1.8rem;
  margin-bottom: 15px;
  color: #6349b2;
}

/* === FORMULARIO === */
form {
  display: flex;
  flex-direction: column;
  gap: 15px;
  background-color: #fff3e6;
  padding: 20px;
  border-radius: 12px;
  max-width: 600px;
  margin: auto;
}

form input,
form textarea,
form select {
  padding: 10px;
  border: 1px solid #ad8fc5;
  border-radius: 8px;
  font-size: 1rem;
}

form button {
  background: linear-gradient(to right, #68389c, #da6778);
  color: white;
  padding: 10px;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  font-size: 1rem;
}

form button:hover {
  background: linear-gradient(to right, #9c383b, #9f67da);
}

/* === FOOTER === */
footer {
  background: linear-gradient(to right, #68389c, #da6778);
  color: white;
  text-align: center;
  padding: 20px;
  margin-top: 40px;
}

/* === CONTENEDOR DE RESEÑAS === */
.resenas-contenedor {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 20px;
}

body.resenas-detalle .resenas-contenedor {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

/* === TARJETAS DE RESEÑAS === */
.resena {
  font-family: "Georgia", serif;
  background-color: white;
  border: 1px solid #eee;
  border-radius: 12px;
  padding: 15px;
  box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  transition: transform 0.2s;
  opacity: 0;
  transform: translateY(20px);
  animation: entrada 0.5s ease forwards;
}

.resena:hover {
  transform: translateY(-5px);
}

.resena img {
  width: 100%;
  height: 180px;
  object-fit: cover;
  border-radius: 8px;
  margin-bottom: 10px;
}

.resena h3 {
  margin-bottom: 5px;
  color: #6349b2;
}

.resena p {
  white-space: pre-wrap; /* Respeta saltos de línea y espacios */
}

/* === ANIMACIONES === */
@keyframes entrada {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* === BOTÓN VOLVER === */
.boton-volver {
  background: linear-gradient(to right, #68389c, #da6778);
  color: white;
  padding: 8px 14px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  font-size: 1rem;
  font-weight: bold;
  transition: background 0.3s;
}
/* === BOTÓN VOLVER dos?=== */
#btn-volver {
  background-color: #007bff;
  color: white;
  padding: 0.6rem 1.2rem;
  border: none;
  border-radius: 6px;
  font-size: 1rem;
  cursor: pointer;
  transition: background-color 0.3s ease, color 0.3s ease;
}

#btn-volver:hover {
  background-color: #0056b3;
}

/* === Modo oscuro ===*/
.dark-mode #btn-volver {
  background-color: #444;
  color: #fff;
}

.dark-mode #btn-volver:hover {
  background-color: #666;
}

/* === MODO OSCURO === */
body.dark-mode {
  background: linear-gradient(to right, #1a1a1a, #444);
  color: #f0f0f0;
}

body.dark-mode h2 {
  color: #af3b3b;
}

body.dark-mode .resena {
  background-color: #414047;
  border: 1px solid #333;
}

body.dark-mode .resena h3 {
  color: #af3b3b;
}

body.dark-mode header,
body.dark-mode footer {
  background: linear-gradient(to right, #601e1e, #be5151);
  border: 1px solid #333;
}

body.dark-mode form {
  background-color: #454341;
  border: 1px solid #333;
}

body.dark-mode form input,
body.dark-mode form textarea,
body.dark-mode form select {
  border: 1px solid #af3b3b;
}

body.dark-mode form button {
  background: linear-gradient(to right, #d94747, #c21717);
}

body.dark-mode form button:hover {
  background: linear-gradient(to right, #f93737, #f76666);
}

form button,
body.dark-mode form button {
  background: linear-gradient(to right, #68389c, #da6778);
}

form button:hover,
body.dark-mode form button:hover {
  background: linear-gradient(to right, #9c383b, #9f67da);
}
body.dark-mode form button {
  background: linear-gradient(to right, #68389c, #da6778);
}

form button:hover,
body.dark-mode form button:hover {
  background: linear-gradient(to right, #9c383b, #9f67da);
}

/* === BOTÓN ELIMINAR === */
.eliminar-btn {
  background-color: #da6778;
  color: white;
  border: none;
  padding: 8px 12px;
  margin-top: 10px;
  border-radius: 6px;
  cursor: pointer;
  font-size: 0.9rem;
  transition: background-color 0.2s;
}

.eliminar-btn:hover {
  background-color: #c0484a;
}

body.dark-mode .eliminar-btn {
  background-color: #af3b3b;
}

body.dark-mode .eliminar-btn:hover {
  background-color: #992e2e;
}

/* === Boton de editar ===*/
.editar-btn {
  background-color: #ffaf4d;
  color: white;
  border: none;
  padding: 8px 12px;
  margin-top: 10px;
  margin-left: 10px;
  border-radius: 6px;
  cursor: pointer;
  font-size: 0.9rem;
  transition: background-color 0.2s;
}

.editar-btn:hover {
  background-color: #e08a00;
}

body.dark-mode .editar-btn {
  background-color: #c6802b;
}

body.dark-mode .editar-btn:hover {
  background-color: #a05c00;
}

/* === INTERRUPTOR MODO OSCURO === */
.switch {
  position: absolute;
  top: 20px;
  right: 20px;
}

.switch input {
  display: none;
}

.slider {
  display: inline-block;
  width: 50px;
  height: 25px;
  background-color: #ccc;
  border-radius: 25px;
  position: relative;
  cursor: pointer;
}

.slider::before {
  content: "";
  position: absolute;
  top: 3px;
  left: 4px;
  width: 18px;
  height: 18px;
  background-color: white;
  border-radius: 50%;
  transition: 0.3s;
}

input:checked + .slider::before {
  transform: translateX(24px);
}

/* === LOADER === */
#loader {
  position: fixed;
  top: 0; left: 0;
  width: 100vw;
  height: 100vh;
  background: white;
  color: black;
  font-size: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}
/* === Modal edición === */
.modal {
  position: fixed;
  top: 0; left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0,0,0,0.5);
  display: none;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.modal-contenido {
  background: white;
  padding: 20px;
  border-radius: 12px;
  width: 90%;
  max-width: 400px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.3);
}

.modal-contenido h2 {
  margin-bottom: 15px;
  color: #6349b2;
}

.modal-contenido label {
  display: block;
  margin-top: 10px;
  font-weight: bold;
}

.modal-contenido input,
.modal-contenido textarea {
  width: 100%;
  margin-top: 5px;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 8px;
}

.modal-botones {
  margin-top: 15px;
  display: flex;
  justify-content: flex-end;
  gap: 10px;
}

.modal-botones button {
  padding: 8px 12px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  font-weight: bold;
}

#guardar-edicion {
  background-color: #6349b2;
  color: white;
}

#guardar-edicion:hover {
  background-color: #4e3790;
}

#cancelar-edicion {
  background-color: #ccc;
}

#cancelar-edicion:hover {
  background-color: #999;
}

body.dark-mode .modal-contenido {
  background-color: #333;
  color: white;
}

body.dark-mode .modal-contenido input,
body.dark-mode .modal-contenido textarea {
  background-color: #444;
  border: 1px solid #666;
  color: white;
}
/* === MODAL DE EDICIÓN === */
#modal-editar {
  display: none;
  position: fixed;
  top: 0; left: 0;
  width: 100vw; height: 100vh;
  background-color: rgba(0, 0, 0, 0.65);
  justify-content: center;
  align-items: center;
  z-index: 1000;
  padding: 1rem;
}

.modal-contenido {
  background-color: #fff;
  color: #333;
  padding: 2rem;
  border-radius: 12px;
  width: 100%;
  max-width: 500px;
  box-shadow: 0 0 20px rgba(0,0,0,0.3);
  display: flex;
  flex-direction: column;
  gap: 1rem;
  animation: fadeIn 0.3s ease-in-out;
}

#modal-editar label {
  font-weight: bold;
}

#modal-editar input,
#modal-editar textarea,
#modal-editar select {
  width: 100%;
  padding: 0.7rem;
  border: 1px solid #ccc;
  border-radius: 6px;
  font-size: 1rem;
  background-color: #f9f9f9;
  transition: border-color 0.2s, box-shadow 0.2s;
}

#modal-editar input:focus,
#modal-editar textarea:focus,
#modal-editar select:focus {
  border-color: #007bff;
  box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.2);
  outline: none;
}

#modal-editar button {
  padding: 0.7rem 1.2rem;
  border: none;
  border-radius: 6px;
  font-size: 1rem;
  cursor: pointer;
  transition: background-color 0.2s;
}

#guardar-edicion {
  background-color: #28a745;
  color: white;
}

#guardar-edicion:hover {
  background-color: #218838;
}

#cancelar-edicion {
  background-color: #dc3545;
  color: white;
}

#cancelar-edicion:hover {
  background-color: #c82333;
}

/* === DARK MODE para el modal === */
.dark-mode #modal-editar .modal-contenido {
  background-color: #1e1e1e;
  color: #eee;
}

.dark-mode #modal-editar input,
.dark-mode #modal-editar textarea,
.dark-mode #modal-editar select {
  background-color: #2a2a2a;
  color: #eee;
  border-color: #444;
}

.dark-mode #modal-editar input:focus,
.dark-mode #modal-editar textarea:focus,
.dark-mode #modal-editar select:focus {
  border-color: #00bfff;
  box-shadow: 0 0 0 2px rgba(0, 191, 255, 0.2);
}

/* === Animación === */
@keyframes fadeIn {
  from { opacity: 0; transform: scale(0.9); }
  to   { opacity: 1; transform: scale(1); }
}
/* === Imagen dentro de reseña === */
.resena {
  position: relative;
  padding-right: 350px; /* espacio para la imagen a la derecha */
}

.resena-img {
  position: absolute;
  top: 5rem;
  right: 2rem;
  max-width: 300px;
  max-height: 300px;
  border-radius: 6px;
  object-fit: cover;
  box-shadow: 0 0 8px rgba(0,0,0,0.1);
}
