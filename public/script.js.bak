  }

  filtro.addEventListener('change', () => {
    const valor = parseInt(filtro.value);
    const filtradas = valor > 0
      ? reseÃ±asGuardadas.filter(r => parseInt(r.puntuacion) >= valor)
      : reseÃ±asGuardadas;

    mostrarResenas(filtradas);
