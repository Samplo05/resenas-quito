    `;

    nueva.querySelector('.borrar').addEventListener('click', async () => {
      const confirmacion = confirm('Â¿Seguro que quieres borrar esta reseÃ±a?');
      if (confirmacion) {
        const res = await fetch(`/api/resenas/${resena._id}`, {
          method: 'DELETE'
        });
        if (res.ok) {
          reseÃ±asGuardadas = reseÃ±asGuardadas.filter(r => r._id !== resena._id);
